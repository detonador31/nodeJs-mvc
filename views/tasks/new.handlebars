{{#if task}}
<h1>Editar Tarefa {{task.title}}</h1>
{{else }}
<h1>Nova Tarefa</h1>
{{/if }}

<form action="/tasks/save" method="POST">
    <input id="id" name="id" value="{{ task.id }}" hidden />
    <div class="form-control">
        <label for="title">Título:</label>
        <input type="text" name="title" value="{{ task.title }}" placeholder="Digite o Título" />
    </div>
    <div class="form-control">
        <label for="description">Descrição:</label>
        <textarea name="description" placeholder="Digite a Descrição" />{{ task.description }}</textarea>
    </div>
    <input type="submit" value="Salvar" />
</form>